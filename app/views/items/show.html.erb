<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @item.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @item.description %>
</p>

<p>
  <strong>Room:</strong>
  <%= @item.room %>
</p>

<p>
  <strong>Purchase price:</strong>
  <%= number_to_currency(@item.purchase_price) %>
</p>

<% unless @item.image_file_name? %>
  <p>You should upload a picture of this item!</p>
<% else %>
  <p><%= image_tag @item.image.url(:medium) %></p>
<% end %>

<%= link_to 'Edit', edit_item_path(@item) %>
<%= link_to 'Delete Item', item_path, method: :delete, data: { confirm: 'Are you sure you want to delete this item?' } %>
<%= link_to 'Back', items_path %>
